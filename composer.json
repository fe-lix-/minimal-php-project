{
    "name": "fe-lix-/minimal-php-project",
    "description": "A minimal php project with just PSR-4, phpunit & behat!",
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3.*",
        "behat/behat": "3.0.*"
    },
    "autoload": {
        "psr-4" : {
            "My\\App\\": ["src/", "tests/"]
        }
    }
}
